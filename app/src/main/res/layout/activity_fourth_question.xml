<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dg55"
        android:id="@+id/imageView6"
        android:background="#F3984F" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/app_bar_principal1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_header_height"
            android:orientation="vertical"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="157dp">

            <RadioButton
                android:text="En la mañana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foqradioOption1"
                android:layout_weight="1" />

            <RadioButton
                android:text="En la mañana y en la tarde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foqradioOption2"
                android:layout_weight="1" />

            <RadioButton
                android:text="En la mañana y en la noche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foqradioOption3"
                android:layout_weight="1" />

            <RadioButton
                android:text="En la tarde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foqradioOption4"
                android:layout_weight="1" />

            <RadioButton
                android:text="En la noche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foqradioOption5"
                android:layout_weight="1" />

            <RadioButton
                android:text="Todo el dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foqradioOption6"
                android:layout_weight="1" />


        </RadioGroup>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>

