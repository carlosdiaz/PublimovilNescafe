<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dg44"
        android:id="@+id/imageView7"
        android:background="#8FCC33" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/app_bar_principal1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp">

            <RadioButton
                android:text="Amarillo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton1"
                android:layout_weight="1" />

            <RadioButton
                android:text="Azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton2"
                android:layout_weight="1" />

            <RadioButton
                android:text="Blanco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton3"
                android:layout_weight="1" />

            <RadioButton
                android:text="CafÃ©"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton4"
                android:layout_weight="1" />

            <RadioButton
                android:text="Morado/Violeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton5"
                android:layout_weight="1" />

            <RadioButton
                android:text="Naranja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton6"
                android:layout_weight="1" />

            <RadioButton
                android:text="Negro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton7"
                android:layout_weight="1" />

            <RadioButton
                android:text="Rojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton8"
                android:layout_weight="1" />

            <RadioButton
                android:text="Rosado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton9"
                android:layout_weight="1" />

            <RadioButton
                android:text="Verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tqradioButton10"
                android:layout_weight="1" />
        </RadioGroup>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>

